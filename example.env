# Only copy this to .env if you're using Heroku or something similar.
# Otherwise, use config.js and ignore this file.

# this variable triggers the app to ignore config.js
DEPLOYMENT=heroku

LOG_LEVEL=1

# fill in with some cloud provider or something
REDIS_PORT=
REDIS_IP=
REDIS_PASSWORD=

# default values, can be ignored and set in Redis anyway
LIVE_CHAT=true
LIVE_DEATH_INTERVAL=60000
LIVE_HEARTBEAT_INTERVAL=35000
LIVE_GHOST_DURATION=2000
LIVE_GHOST_MAX=10

# uncomment and fill in Logentries token to use it
# LOGENTRIES=yourtoken